# WeQuo Phase 1 Environment Variables
# Copy this file to .env and fill in your API keys

# FRED API (Required for economic data)
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage API (Optional - for commodities data, uses mock data if not provided)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# CoinGecko API (Optional - for cryptocurrency data, uses mock data if not provided)
COINGECKO_API_KEY=your_coingecko_demo_key_here

# Web App Configuration
SECRET_KEY=your_secret_key_here
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Monitoring & Alerting Configuration
# Slack Webhook (Optional - for Slack alerts)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email Configuration (Optional - for email alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=admin@yourcompany.com,alerts@yourcompany.com

# Webhook Configuration (Optional - for custom webhook alerts)
WEBHOOK_URL=your_webhook_url_here
WEBHOOK_HEADERS={"Authorization": "Bearer your_token_here"}
